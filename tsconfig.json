{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "./src",
    "typeRoots": [
      "src/types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "tests/**/*.ts"
  ],
  "lib": [
    "es2015"
  ]
}